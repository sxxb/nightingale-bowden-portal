---
const { title, abstract, image = "https://doodleipsum.com/500x500/hand-drawn", url, target = "_self" } = Astro.props;

---
<a class="tile" href={url} target={target}>
    <img
        src={image}
        alt={title}
    />
    <div class="tile-text">
        <h3>{title}</h3>
        <p>{abstract}</p>
    </div>
</a>